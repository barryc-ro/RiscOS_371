    {
        e = _swix(OS_Module, _IN(0)|_IN(3) | _OUT(2),
                OSModule_Claim,
                nbytes,
                &ptr);
    }

    if (e == NULL)
    {
        *addr = ptr;
        return TRUE;
    }

    os_err(e);
    alloc__checkerror(nbytes);

    return FALSE;
}

void m_free(void **addr)
{
    if (*addr)
    {
        os_err(_swix(OS_Module, _IN(0)|_IN(2), OSModule_Free, *addr));
        *addr = NULL;
    }
}
