#include "kernel.h"
#include "os.h"
#include "swis.h"
#include "werr.h"

#include <stddef.h>

#include "memalloc.h"
#include "mem_int.h"

enum
{
    OSModule_Claim = 6,
    OSModule_Free,
    OSModule_ExtendBlock = 13
};

BOOL m_alloc(void **addr, size_t nbytes)
{
    _kernel_swi_regs    r;
    _kernel_oserror     *e;

    if (*addr)
    {
        r.r[0] = OSModule_ExtendBlock;
        r.r[2] = (int) *addr;
        r.r[3] = nbytes - (((int *)*addr)[-1] - 8);
    }
    else
    {
        r.r[0] = OSModule_Claim;
        r.r[3] = nbytes;
    }

    e = _kernel_swi(OS_Module, &r, &r);

    if (e == NULL)
    {
        *addr = (void *)r.r[2];
        return TRUE;
    }

    os_err((os_error *)e);
    alloc__checkerror(nbytes);

    return FALSE;
}

void m_free(void **addr)
{
    if (*addr)
    {
        _kernel_swi_regs    r;
        r.r[0] = OSModule_Free;
        r.r[2] = (int) *addr;
        os_err((os_error *)_kernel_swi(OS_Module, &r, &r));
        *addr = NULL;
    }
}

