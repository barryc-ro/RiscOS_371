#ifndef __wmisc_h
# define __wmisc_h

#ifndef __wimp_h
# include "wimp.h"
#endif

#ifndef __win_h
# include "win.h"
#endif

typedef enum
{
    wcol_White    = 0,
    wcol_Grey1,
    wcol_Grey2,
    wcol_Grey3,
    wcol_Grey4,
    wcol_Grey5,
    wcol_Grey6,
    wcol_Black,
    wcol_Blue,
    wcol_Yellow,
    wcol_Green,
    wcol_Red,
    wcol_Cream,
    wcol_DarkGreen,
    wcol_Orange,
    wcol_Cyan,

    wcol_TitleFG        = wcol_Black,
    wcol_TitleBG        = wcol_Grey2,
    wcol_WorkFG         = wcol_Black,
    wcol_WorkBG         = wcol_Grey1,
    wcol_ScrollOuter    = wcol_Grey3,
    wcol_ScrollInner    = wcol_Grey1,
    wcol_TitleHi        = wcol_Cream,

    wcol_DesktopBG      = wcol_Grey4,
    wcol_IconBarBG      = wcol_Grey1,

    wcol_Transparent    = 0xff
} wimp_colour_t;

#define ESG_SHIFT           16

#define WIN_TITLE_HEIGHT    44

