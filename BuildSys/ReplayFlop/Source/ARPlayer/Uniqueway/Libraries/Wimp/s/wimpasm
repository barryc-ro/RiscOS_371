; os_error * wimp_load_template(wimp_template * t)

wimp_load_template      Declare "v1-v3"
                ADD     ip, a1, #4
                LDMIA   ip, {a2,a3,a4,v1,v2,v3}
                SWI     XWimp_LoadTemplate
                STMVCIA ip, {a2,a3,a4,v1,v2,v3}
                MOVVC   a1, #0
                EXITS

