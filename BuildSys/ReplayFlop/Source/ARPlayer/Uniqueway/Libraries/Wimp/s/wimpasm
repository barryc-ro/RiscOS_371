; os_error *wimp_blockcopy(wimp_w w, wimp_box *source, int x, int y)

wimp_blockcopy  Declare "v1,v2,v3"
                MOV     v3, a4
                MOV     v2, a3
                LDMIA   a2, {a2,a3,a4,v1}
                SWI     XWimp_BlockCopy
                MOVVC   a1, #0
                EXITS


