        &       -1                      ; not fitted

; Column 7

70
        &       -1                      ; mouse left
        &       -1                      ; mouse centre
        &       -1                      ; mouse right
        ]
        ASSERT  %10-%00 = 16*4
        ASSERT  %20-%10 = 16*4
        ASSERT  %30-%20 = 16*4
        ASSERT  %40-%30 = 16*4
        ASSERT  %50-%40 = 16*4
        ASSERT  %60-%50 = 16*4
        ]
KeyTran2End


