        =       "oO", &0F, &0F          ; O

; Column 3

30
        =       "pP", &10, &10          ; P
        =       "[{", &1B, &1B          ; [
        =       "]}", &1D, &1D          ; ]
        =       "\|", &1C, &1C          ; \
        =       &7F, &7F, &7F, &7F      ; Delete
        =       &8B, &9B, &AB, &BB      ; Copy
        =       &9E, &8E, &BE, &AE      ; Page Down
        &       -1                      ; pad 7
        &       -1                      ; pad 8
        &       -1                      ; pad 9
        &       -1                      ; pad -
        &       -1                      ; Ctrl (left)
        =       "aA", &01, &01          ; A
        =       "sS", &13, &13          ; S
        =       "dD", &04, &04          ; D
        =       "fF", &06, &06          ; F

; Column 4

40
        =       "gG", &07, &07          ; G
        =       "hH", &08, &08          ; H
        =       "jJ", &0A, &0A          ; J
        =       "kK", &0B, &0B          ; K
        =       "lL", &0C, &0C          ; L
        =       ";:;:"                  ; ;
        =       "'""'"""                ; '
        =       &0D, &0D, &0D, &0D      ; Return
        &       -1                      ; pad 4
        &       -1                      ; pad 5
        &       -1                      ; pad 6
        &       -1                      ; pad +
        &       -1                      ; Shift (left)
        &       -1                      ; not fitted
