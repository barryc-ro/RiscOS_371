#include <ctype.h>

#include "util.h"

/*
 * case independent string compare
 */
int stricmp(const char *s1, const char *s2)
{
    int n = 0;
    while ((n = toupper(*s1) - toupper(*s2)) == 0 && *s1)
	++s1, ++s2;
    return n;
}

/*
 * case independent string compare
 */
int strnicmp(const char *s1, const char *s2, int l)
{
    int n = 0;
    while (l-- && (n = toupper(*s1) - toupper(*s2)) == 0 && *s1)
	++s1, ++s2;
    return n;
}

/* EOF stricmp.c */
