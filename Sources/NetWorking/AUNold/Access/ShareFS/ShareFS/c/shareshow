#include <string.h>
#include <stdio.h>

#include "how.h"
#include "util.h"

#define DEFAULTBUFFERSIZE 32*1024

struct how defaulthow = {0, 1, 0, 0, 0, 0, 0, DEFAULTBUFFERSIZE};

int howread(struct how *h, char *s)
{
    if (!stricmp(s, "-readonly"))
	 h->readonly = 1;
    else
    if (!stricmp(s, "-noicon"))
    {
	h->hidden = 1;
	h->readonly = 1;
    }
    else
	return 1;
    return 0;
}

char *howprint(struct how h)
{
    static char buf[30];
    sprintf(buf, "%s%s%s", h.readonly ? "-readonly " : "",
	    h.owner ? "" : "-protected ",
	    h.hidden ? "-noicon " : "");
    return buf;
}

/* EOF shareshow.c */
