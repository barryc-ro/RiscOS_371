#include <string.h>
#include "util.h"

char *leaf(char *path)
{
    char *p = strrchr(path, '.');
    char *q = strrchr(path, ':');
    if (!p)
	return q ? q + 1 : path;
    if (q && p < q)
	return path;
    return p + 1;
}

/* EOF leaf.c */
