TITLE FSLock; //RO3.5

NEEDS OS, FileSwitch;

TYPE FSLock_LockStatus = .Int;
CONST
  FSLock_StatusUnlocked  = FSLock_LockStatus: 0,
  FSLock_StatusProtected = FSLock_LockStatus: 1,
  FSLock_StatusLocked    = FSLock_LockStatus: 2;

CONST
   Error_FSLockUnknownSWI    = .Bits: &806500,
   Error_FSLockLocked        = .Bits: &806501,
   Error_FSLockUnknownFS     = .Bits: &806502,
   Error_FSLockFSNotLockable = .Bits: &806503,
   Error_FSLockNoLockedFS    = .Bits: &806504,
   Error_FSLockProtectedDisc = .Bits: &806505,
   Error_FSLockKilled        = .Bits: &806506;

SWI FSLock_Version =
   (  NUMBER 0x44780 "Returns information describing the FSLock module - RISC O S 3.5+",
      EXIT
      (  R0! = .Int: version,
         R1 = .Ref Void: workspace
   )  );

SWI FSLock_Status =
   (  NUMBER 0x44781 "Returns the current lock status, and the locked filing
            system's number - RISC O S 3.5+",
      EXIT
      (  R0! = FSLock_LockStatus: lock_status,
         R1 = FileSwitch_FSNo: fs_no
   )  );

SWI FSLock_ChangeStatus =
   (  NUMBER 0x44782 "Changes one or more of the lock status, the password
            and the locked filing system - RISC O S 3.5+",
      ENTRY
      (  R0 = FSLock_LockStatus: new_lock_status,
         R1 -> .String: password,
         R2 -> .String: new_password,
         R3 = FileSwitch_FSNo: new_fs_no
   )  )
