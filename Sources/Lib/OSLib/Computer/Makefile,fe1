# Makefile for OSLib Computer

# ***********************************
# ***    C h a n g e   L i s t    ***
# ***********************************
# Date          Name         Description
# ----          ----         -----------
# 21st Jun 1995 JRC          Created.

LIBDIR = <Lib$Dir>

#
# Generic options:
#
MKDIR   = cdir
WIPE    = -wipe
WFLAGS  = ~c~v

#
# Program specific options:
#
COMPONENT = OSLib

HDRS = \
Hdr.ADFS \
Hdr.CD \
Hdr.CDFS \
Hdr.DeviceFS \
Hdr.DOSFS \
Hdr.Econet \
Hdr.FileCore \
Hdr.Filer \
Hdr.FilerActio \
Hdr.FileSwitch \
Hdr.Free \
Hdr.Freeway \
Hdr.FSLock \
Hdr.Joystick \
Hdr.NetFiler \
Hdr.NetFS \
Hdr.NetPrint \
Hdr.NFS \
Hdr.OSArgs \
Hdr.OSFile \
Hdr.OSFind \
Hdr.OSFSContro \
Hdr.OSGBPB \
Hdr.OSSerialOp \
Hdr.Parallel \
Hdr.PipeFS \
Hdr.RAMFS \
Hdr.ResourceFS \
Hdr.SCSI \
Hdr.SCSIFS \
Hdr.ShareFS \
Hdr.Socket

LIBS = \
o.adfs \
o.cd \
o.cdfs \
o.devicefs \
o.dosfs \
o.econet \
o.filecore \
o.filer \
o.fileractio \
o.fileswitch \
o.free \
o.freeway \
o.fslock \
o.joystick \
o.netfs \
o.netprint \
o.nfs \
o.osargs \
o.osfile \
o.osfind \
o.osfscontro \
o.osgbpb \
o.osserialop \
o.parallel \
o.pipefs \
o.ramfs \
o.resourcefs \
o.scsi \
o.scsifs \
o.sharefs \
o.socket

CHEADERS = \
h.adfs \
h.cd \
h.cdfs \
h.devicefs \
h.dosfs \
h.econet \
h.filecore \
h.filer \
h.fileractio \
h.fileswitch \
h.free \
h.freeway \
h.fslock \
h.joystick \
h.netfiler \
h.netfs \
h.netprint \
h.nfs \
h.osargs \
h.osfile \
h.osfind \
h.osfscontro \
h.osgbpb \
h.osserialop \
h.parallel \
h.pipefs \
h.ramfs \
h.resourcefs \
h.scsi \
h.scsifs \
h.sharefs \
h.socket

CSTRONG = \
Help.ADFS \
Help.CD \
Help.CDFS \
Help.DeviceFS \
Help.DOSFS \
Help.Econet \
Help.FileCore \
Help.Filer \
Help.FilerActio \
Help.FileSwitch \
Help.Free \
Help.Freeway \
Help.FSLock \
Help.Joystick \
Help.NetFiler \
Help.NetFS \
Help.NetPrint \
Help.NFS \
Help.OSArgs \
Help.OSFile \
Help.OSFind \
Help.OSFSContro \
Help.OSGBPB \
Help.OSSerialOp \
Help.Parallel \
Help.PipeFS \
Help.RAMFS \
Help.ResourceFS \
Help.SCSI \
Help.SCSIFS \
Help.ShareFS \
Help.Socket

FILES = ${HDRS} ${CHEADERS} ${CSTRONG} ${LIBS}

all: $(FILES)

release: ${FILES}
   Copy h       OSLib:Computer.h          ~CFLNR~V
   Copy Hdr     OSLib:Computer.Hdr        ~CFLNR~V
   Copy CStrong <StrongHelp$Dir>.HelpData ~CFLNR~V

#------------------------------------------------------------------------
hdrs: ${HDRS}
libs: ${LIBS}
cheaders: ${CHEADERS}
cstrong: ${CSTRONG}

.SUFFIXES: .o .h .h++ .def .ch .Hdr .ah .Help

.def.s:     ;DefMod -s -byte_wide ^.ByteWide < $< > $@
.def.h:     ;DefMod -h < $< > $@
.def.h++:   ;DefMod -h++ < $< > $@
.def.Hdr:   ;DefMod -hdr < $< > $@
.def.ch:    ;DefMod -chelp < $< > $@
.def.ah:    ;DefMod -asmhelp < $< > $@
.def.o:     ;DefMod -l -o l.$* -byte_wide ^.ByteWide < $<
            LibFile -c -o $@ -via ViaFile
            -LibFile -d ^.o.OSLib l.$*.*
            LibFile -i -o ^.o.OSLib -via ViaFile
            Wipe l.$* ~C~FR~V
.def.Help:  ;DefMod -cstrong -o CStrong.$* < $<
            Create $@

#------------------------------------------------------------------------
# RISC OS Build targets:
#
export: export_${PHASE}

export_hdrs:
        @echo ${COMPONENT}: export complete (hdrs)

export_libs: ${HDRS} ${CHEADERS} ${LIBS}
        Copy h          OSLib:Computer.h                   ~CFLNR~V
        Copy Hdr        OSLib:Computer.Hdr                 ~CFLNR~V
        @echo ${COMPONENT}: export complete (libs)

clean:
        @echo ${COMPONENT}: *** NOT cleaned *** clean locally if required

clean_lib:
        ${WIPE} o.* ${WFLAGS}
        @echo ${COMPONENT}: cleaned

# End of RISC OS Build targets
#------------------------------------------------------------------------
# Dynamic dependencies:
