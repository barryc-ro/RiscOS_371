TITLE OptionButton;

NEEDS Toolbox, Gadget;

CONST Class_OptionButton = Toolbox_Class: 0xC0;

//Option buttons
TYPE
   OptionButton_Object = .Struct
   (  .Ref .String: label,
      .Int: label_limit,
      .Bits: action
   );

SWI
   OptionButton_SetLabel =
   (  NUMBER 0x44EC6,
      ENTRY
      (  R0 = .Bits: flags,
         R1 = Toolbox_O: window,
         R2 # 0xC0 "Sets the label of the specified option button",
         R3 = Toolbox_C: option_button,
         R4 -> .String: label
   )  ),

   OptionButton_GetLabel =
   (  NUMBER 0x44EC6,
      ENTRY
      (  R0 = .Bits: flags,
         R1 = Toolbox_O: window,
         R2 # 0xC1 "Gets the label of the specified option button",
         R3 = Toolbox_C: option_button,
         R4 = .Ref .String: buffer,
         R5 = .Int: size
      ),
      EXIT
      (  R5! = .Int: used
   )  ),

   OptionButton_SetAction =
   (  NUMBER 0x44EC6,
      ENTRY
      (  R0 = .Bits: flags,
         R1 = Toolbox_O: window,
         R2 # 0xC2*,
         R3 = Toolbox_C: option_button,
         R4 = .Bits: action
   )  ),

   OptionButton_GetAction =
   (  NUMBER 0x44EC6,
      ENTRY
      (  R0 = .Bits: flags,
         R1 = Toolbox_O: window,
         R2 # 0xC3*,
         R3 = Toolbox_C: option_button
      ),
      EXIT
      (  R0! = .Bits: action
   )  ),

   OptionButton_SetState =
   (  NUMBER 0x44EC6,
      ENTRY
      (  R0 = .Bits: flags,
         R1 = Toolbox_O: window,
         R2 # 0xC4*,
         R3 = Toolbox_C: option_button,
         R4 = .Bool: on
   )  ),

   OptionButton_GetState =
   (  NUMBER 0x44EC6,
      ENTRY
      (  R0 = .Bits: flags,
         R1 = Toolbox_O: window,
         R2 # 0xC5*,
         R3 = Toolbox_C: option_button
      ),
      EXIT
      (  R0! = .Bool: on
   )  );

CONST Action_OptionButtonStateChanged = .Bits: 0x82882;

TYPE OptionButton_ActionStateChanged = .Struct (.Bool: on);

CONST
   OptionButton_StateChangedAdjust      = .Bits: 0x01,
   OptionButton_StateChangedSelect      = .Bits: 0x04
