SWI OS_Byte =
   (  NUMBER 6 "General purpose call to alter status variables and
            perform other actions",
      ENTRY
      (  R0 = OSByte_Op: op,
         R1 = .Int: r1,
         R2 = .Int: r2
      ),
      EXIT
      (  R1 = .Int: r1_out,
         R2 = .Int: r2_out
   )  );

SWI
   ByteV =
   (  NUMBER 0x34,
      ENTRY
      (  R0 = OSByte_Op: op,
         R1 = .Int: r1,
         R2 = .Int: r2,
         R9 # &06 "OS_Byte vector"
      ),
      EXIT
      (  R1 = .Int: r1_out,
         R2 = .Int: r2_out
   )  );

//Special function for OS_Bytes with no result
SWI OSByte =
   (  NUMBER 6 "Special case of call to perform OS_Byte actions
            with no result",
      ENTRY (R0 = OSByte_Op: op, R1 = .Int: r1, R2 = .Int: r2),
      EXIT  (R1?, R2?)
   );

//Special functions for OS_Bytes that return a single value
SWI OSByte1 =
   (  NUMBER 6 "First special case of call to perform OS_Byte actions
            returning a result",
      ENTRY (R0 = OSByte_Op: op, R1 = .Int: r1, R2 = .Int: r2),
      EXIT  (R1! = .Int: r1_out, R2?)
   );

SWI OSByte2 =
   (  NUMBER 6 "Second special case of call to perform OS_Byte actions
            returning a result",
      ENTRY (R0 = OSByte_Op: op, R1 = .Int: r1, R2 = .Int: r2),
      EXIT  (R1?, R2! = .Int: r2_out)
   );

//Two special functions to allow reading and writing of status variables
SWI OSByte_Read =
   (  NUMBER 6,
      ENTRY (R0 = OSByte_Var: var, R1 # 0, R2 # 0xFF "Reads an OS_Byte status
            variable"),
      EXIT  (R1! = .Int: value, R2?)
   );

SWI OSByte_Write =
   (  NUMBER 6,
      ENTRY (R0 = OSByte_Var: var, R1 = .Int: value, R2 # 0 "Writes an OS_Byte
            status variable"),
      EXIT  (R1?, R2?)
   )

