TITLE OSByte;

NEEDS OS;

TYPE OSByte_Op = .Byte, OSByte_Var = .Byte;
CONST
   //OS_Bytes in the range 0, ..., 127: one argument only
   OSByte_Version              = OSByte_Op: 0x00,
   OSByte_UserFlag             = OSByte_Op: 0x01, //see below
